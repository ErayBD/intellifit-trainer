<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpContinueActivity"
    android:background="@drawable/main_bg">

    <LinearLayout
        android:id="@+id/signupcon_ll_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintHeight_percent="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="30dp"
        android:weightSum="3">


        <ImageView
            android:id="@+id/signupcon_iv_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            app:srcCompat="@drawable/logo_2"
            tools:ignore="ContentDescription" />


        <EditText
            android:id="@+id/signupcon_et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_border_background"
            android:ems="10"
            android:hint="Phone Number"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/signupcon_et_dob"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/spinner_background"
            android:ems="10"
            android:focusable="false"
            android:hint="Date of Birth"
            android:inputType="date"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/signupcon_ll_gender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/signupcon_spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:ignore="TouchTargetSizeCheck"
                android:background="@android:color/transparent"
                />

        </LinearLayout>


        <EditText
            android:id="@+id/signupcon_et_height"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/text_border_background"
            android:ems="10"
            android:hint="Height"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/signupcon_et_weight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/text_border_background"
            android:ems="10"
            android:hint="Weight"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupcon_bt_signup"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:text="Finish"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>